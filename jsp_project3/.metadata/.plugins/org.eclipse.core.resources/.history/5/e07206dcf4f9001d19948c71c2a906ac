	<%-- 컨트롤러에서 page 정보를 싣고 와야함. --%>
	<%-- 1 ~ endpage까지 숫자 반복 (forEach) --%>


	<%-- 이전페이지 버튼 --%>
	<c:if test="${pgh.prev}">
		<a href="/brd/page?pageNum=${pgh.startPage-1}&qty=${pgh.pgvo.qty}"><button>◀</button></a>
	</c:if>

	<c:forEach begin="${pgh.startPage}" end="${pgh.endPage}"
		var="currentPageNum">
		<a href="/brd/page?pageNum=${currentPageNum}&qty=${pgh.pgvo.qty}">${currentPageNum }</a>
	</c:forEach>

	<%-- 다음페이지 버튼 --%>
	<c:if test="${pgh.next}">
